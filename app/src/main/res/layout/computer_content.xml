<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="#cdcdcd"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="8dp"
                    android:text="电脑型号:" />

                <TextView
                    android:id="@+id/computer_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="ceshi" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">


                <Button
                    android:id="@+id/btn_computer_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_computer_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:textSize="22sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="#cdcdcd"
                android:paddingLeft="8dp"
                android:text="灯光" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">


                <Button
                    android:id="@+id/btn_light_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_light_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:textSize="22sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="#cdcdcd"
                android:paddingLeft="8dp"
                android:text="图片" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">


                <Button
                    android:id="@+id/btn_img_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一张"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_img_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一张"
                    android:textSize="22sp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="#cdcdcd"
                android:paddingLeft="8dp"
                android:text="视频" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <Button
                    android:id="@+id/btn_video_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打开"
                    android:textSize="22sp" />


                <Button
                    android:id="@+id/btn_video_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂停"
                    android:textSize="22sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <Button
                    android:id="@+id/btn_video_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一个"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一个"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/fullscreen"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全屏" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="18dp">

                <Button
                    android:id="@+id/btn_video_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快进"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_backup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="后退"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_voiceup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升高"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_voicelow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="降低"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_video_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="静音"
                    android:textSize="22sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>